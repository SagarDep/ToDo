<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:id="@+id/new_task_layout"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:padding="2dip" android:clickable="true" android:background="@drawable/list_selector">

		<ImageView android:id="@+id/new_task_icon"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:layout_marginRight="6dip" android:src="@drawable/icon" />

		<TextView android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="1"
			android:gravity="center_vertical" android:text="@string/new_task" />

	</LinearLayout>


	<ListView android:id="@+id/task_list"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_weight="1" />

</LinearLayout>
