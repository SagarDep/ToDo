<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="dime.android.todo" android:versionCode="3"
	android:versionName="0.3">
	<uses-sdk android:minSdkVersion="4" />
	<supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:anyDensity="true" />

	<application android:name="ToDo" android:icon="@drawable/icon"
		android:label="@string/app_name" android:theme="@style/MyTheme">
		<activity android:name=".ui.ToDoList" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".ui.NewEditToDo" android:label="@string/new_edit_todo"
			android:theme="@style/MyTheme" android:windowSoftInputMode="stateVisible|adjustResize" />

	</application>
</manifest>