<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:right="3dip" android:left="3dip" android:bottom="3dip"
		android:top="3dip">

		<shape android:shape="rectangle">

			<gradient android:startColor="@color/light_blue"
				android:centerColor="@color/light_blue" android:endColor="@color/light_blue"
				android:angle="90" />

			<corners android:radius="7dp" />

		</shape>

	</item>

	<item android:right="4dip" android:left="4dip" android:bottom="4dip"
		android:top="4dip">

		<shape android:shape="rectangle">

			<gradient android:startColor="@color/white"
				android:endColor="@color/white" android:angle="90" />

			<corners android:radius="4dp" />

		</shape>

	</item>



</layer-list>